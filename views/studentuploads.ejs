<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Teacher Uploads</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #2c3e50;
    }

    .upload-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
      margin-top: 30px;
    }

    .upload-card {
      background: #ecf0f1;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }

    .upload-card:hover {
      transform: scale(1.03);
    }

    .upload-card h3 {
      margin: 0;
      color: #34495e;
    }

    .upload-card p {
      color: #555;
      margin: 10px 0;
    }

    .upload-actions {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .upload-card a {
      text-decoration: none;
      font-weight: bold;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background 0.3s ease;
    }

    .view-btn {
      background-color: #1abc9c;
      color: white;
    }

    .view-btn:hover {
      background-color: #16a085;
    }

    .download-btn {
      background-color: #3498db;
      color: white;
    }

    .download-btn:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body>
  <h1>ðŸ“˜ Uploaded Topics & Notes</h1>
  <div class="upload-container">
    <% uploads.forEach(upload => { %>
      <div class="upload-card">
        <h3><%= upload.topic_name %></h3>
        <p><strong>Date:</strong> <%= upload.date.toISOString().split('T')[0] %></p>
        <div class="upload-actions">
          <a href="/<%= upload.file_path.replace(/\\/g, '/') %>" target="_blank" class="view-btn">ðŸ“Ž View</a>
          <a href="/<%= upload.file_path.replace(/\\/g, '/') %>" download class="download-btn">â¬‡ Download</a>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>
